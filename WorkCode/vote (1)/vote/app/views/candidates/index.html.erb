<h1>候選人列表</h1>
<table class="table">
    <thead>
        <tr>
            <td>投票</td>
            <td>候選人姓名</td>
            <td>年齡</td>
            <td>政黨</td>
            <td>政見</td>
            <td>得票數</td>
            <td>處理</td>
        </tr>
    </thead>
    <tbody>
        <% @candidates.each do |candidate| %>
            <tr>
                <td>
                    <%= link_to "投給這位", vote_candidate_path(candidate), method: "post", data: { confirm: "確認要投給這位候選人嗎?!" } , class:"btn btn-danger btn-xs" %>
                </td>
                <td>
                    <%= candidate.name %>(年齡：
                        <%= candidate.age %> 歲
					    <!-程式碼整理的寫法，call helper 來顯示性別 --->
                        <%=show_gender(candidate)%>
                        )  </td>
                <td>
                    <%= candidate.age %>
                </td>
                <td>
                    <%= candidate.party %>
                </td>
                <td>
                    <%= candidate.politics %>
                </td>
                <td>
                    <%= candidate.votes %>
                </td>
                <td>
					<!-省略 candidate_path 的寫法 --->
                    <!- <%#= link_to candidate.name, candidate_path(candidate) , class:"btn btn-info btn-xs" %> --->
                    <%= link_to candidate.display_name, candidate , class:"btn btn-info btn-xs" %>
			        <!-套 BS Style，btn btn-info btn-xs --->
                    <%= link_to "編輯", edit_candidate_path(candidate) , class:"btn btn-info btn-xs" %>
					<!-method 指定要執行的 action --->
			        <!-套 BS Style，btn btn-warning btn-xs --->
					<!-省略 candidate_path 的寫法 --->
                    <!- <%#= link_to "刪除", candidate_path(candidate), method: "delete", data: { confirm: "確認刪除" } ,class:"btn btn-warning btn-xs" %> --->
                    <%= link_to "刪除", candidate, method: "delete", data: { confirm: "確認刪除" } ,class:"btn btn-warning btn-xs" %>
                </td>
            </tr>
            <% end %>
    </tbody>
</table>
<br></br>
<%= [*1..100].sample %>
<br></br>
<%= link_to "新增候選人",new_candidate_path %>
